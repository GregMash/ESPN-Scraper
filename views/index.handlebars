<div id="wrapper">
    <div class="jumbotron">
        <h1>Super Mongo Scraper</h1>
        <h2>The Sports Edition</h2>
        <h3>View, save, and add custom notes for sports articles</h3>
        <form action="/scrape">
            <button id="scrapeBtn">Scrape New Articles</button>
        </form>
        <form action="/saved">
            <button id="savedArticles">View Saved Articles</button>
        </form>
    </div>
</div>

<section class="article-section">
    {{#each articles}}
    <div class="article" id={{_id}}>
        <div class="card-header">
            {{this.title}}
        </div>
        <div class="card-body">
            <img src="{{this.image}}" alt={{this.title}}>
        </div>
        <div class="card-ender">
            <a class="btn btn-dark links" href={{this.link}} role="button">View Article</a>
            <div class="btn-group" role="group" aria-label="Basic example">
                <button class="btn btnInLine btn-dark saver" id={{_id}}>Save Article</button>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-dark" data-toggle="modal" data-target=".modal"
                    data-whatever={{_id}}>View Notes</button>
            </div>

            <!-- Modal -->
            <div class="modal fade" id={{_id}} tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">

                            <div class="notes-area">
                            </div>
                            <form>
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">New Note Title:</label>
                                    <input type="text" class="form-control" id="title-name">
                                </div>
                                <div class="form-group">
                                    <label for="message-text" class="col-form-label">New Note:</label>
                                    <textarea class="form-control" id="note-text"></textarea>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary note-saver">Save Note</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</section>