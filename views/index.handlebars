<div id="wrapper">
    <div class="jumbotron">
        <h1>Super Mongo Scraper</h1>
        <h2>The Sports Edition</h2>
        <h3>View, save, and add custom notes for sports articles</h2>
            <form action="/scrape">
                <button id="scrapeBtn">Scrape New Articles</button>
            </form>
            <form action="/saved">
                <button id="savedArticles">View Saved Articles</button>
            </form>
    </div>
</div>

<div class="articles">
    {{#each articles}}
    <div class="article">
        <div class="card-header">
            {{this.title}}
        </div>
        <div class="card-body">
            <img src="{{this.image}}" alt={{this.title}}>
        </div>
        <div class="card-ender">
            <a class="btn btn-dark links" href={{this.link}} role="button">View Article</a>
            <div class="btn-group" role="group" aria-label="Basic example">
                <button class="btn btnInLine btn-dark saver" id={{this._id}}>Save Article</button>
                <!-- Button trigger modal -->
                <button class="btn btn-dark" type="button" id={{_id}} class="btnInLine noter" data-toggle="modal"
                    data-target="#exampleModalCenter">
                    View Notes
                </button>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" id={{this._id}}>
                <div class="modal-header">
                    <h5 class="modal-title text-dark" id={{this._id}}>{{this.title}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{this.notes}}
                </div>
                <div class="form-group">
                    <label for="message-text" class="col-form-label">Note:</label>
                    <textarea class="form-control" id="note-text"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark" data-dismiss="modal">Close</button>
                    <button type="button" id="note-saver" class="btn btn-primary">Save note</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>